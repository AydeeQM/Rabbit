extends ../../layout.pug

block contenido
  div(class="col-md-6 remove-float d-block mx-auto big-top-space")
    h1 Editar imagen 
    form(action=`/app/imagenes/${imagen.id}?_method=PUT`, method="post")
      input(type="hidden" value="PUT" name="_method")
      div(class="form-group")
        label(for="title") Título
        input(type="text", name="title", placeholder="Título de la imagen...", id="title", class="form-control" value=`${imagen.title}`)
      div(class="row top-space")
        div(class="col-xs-12 col-sm-6")
          button(type="submit", class="btn btn-info") Guardar
